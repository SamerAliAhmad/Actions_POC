FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 5870

ENV ASPNETCORE_URLS=http://+:5870

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

COPY ["SignalR_Realtime_Server/", "SignalR_Realtime_Server/"]

WORKDIR "/SignalR_Realtime_Server"

RUN dotnet build "SignalR_Realtime_Server.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SignalR_Realtime_Server.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "SignalR_Realtime_Server.dll"]
