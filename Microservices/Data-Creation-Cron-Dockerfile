FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

COPY ["Data_Creation_Cron/", "Data_Creation_Cron/"]
COPY ["Assets/", "./Assets"]
COPY ["Service_Mesh/", "./Service_Mesh"]

WORKDIR "/Data_Creation_Cron"

RUN dotnet build "Data_Creation_Cron.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Data_Creation_Cron.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "Data_Creation_Cron.dll"]
