FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

COPY ["Mobility_Dimension_Cron/", "Mobility_Dimension_Cron/"]
COPY ["Assets/", "./Assets"]
COPY ["Service_Mesh/", "./Service_Mesh"]

WORKDIR "/Mobility_Dimension_Cron"

RUN dotnet build "Mobility_Dimension_Cron.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Mobility_Dimension_Cron.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "Mobility_Dimension_Cron.dll"]
